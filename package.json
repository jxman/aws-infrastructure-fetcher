{
  "name": "aws-ssm-data-fetcher",
  "version": "1.8.0",
  "description": "Serverless AWS Lambda function that fetches and maintains AWS global infrastructure data (regions, services, availability mappings) from SSM Parameter Store with S3 storage, SNS notifications, and daily automated updates",
  "main": "src/cli.js",
  "scripts": {
    "start": "node src/cli.js",
    "regions": "node src/cli.js --regions-only",
    "services": "node src/cli.js --services-only",
    "complete": "node src/cli.js --include-service-mapping",
    "complete:fresh": "rm -f output/.cache-services-by-region.json && node src/cli.js --include-service-mapping",
    "cache:clear": "rm -f output/.cache-services-by-region.json && echo '✅ Cache cleared'",
    "clean": "rm -rf output/*.json && echo '✅ All output files removed'"
  },
  "keywords": [
    "aws",
    "aws-lambda",
    "ssm",
    "parameter-store",
    "regions",
    "services",
    "infrastructure",
    "serverless",
    "sam",
    "cloudformation",
    "s3",
    "sns",
    "cloudwatch",
    "eventbridge",
    "infrastructure-as-code"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-cloudfront": "^3.645.0",
    "@aws-sdk/client-s3": "^3.645.0",
    "@aws-sdk/client-sns": "^3.645.0",
    "@aws-sdk/client-ssm": "^3.645.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "he": "^1.2.0",
    "xml2js": "^0.6.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
